{
  "name": "trueqap/wp-site-manager",
  "description": "WordPress Site Manager using Abilities API - MainWP alternative",
  "type": "wordpress-plugin",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "trueqap",
      "homepage": "https://github.com/trueqap"
    }
  ],
  "minimum-stability": "RC",
  "prefer-stable": true,
  "require": {
    "php": ">=8.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0",
    "phpstan/phpstan": "^1.0",
    "squizlabs/php_codesniffer": "^3.0"
  },
  "autoload": {
    "psr-4": {
      "WPSiteManager\\": "src/"
    }
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "scripts": {
    "phpcs": "phpcs --standard=WordPress src/",
    "phpstan": "phpstan analyse src/",
    "test": "phpunit"
  }
}
